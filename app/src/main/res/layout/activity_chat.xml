<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.shrikanthravi.chatviewlibrary.ChatActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="65dp"
        android:id="@+id/chatRV"
        android:layout_marginBottom="-8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_above="@+id/sendLL"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendLL"
        android:background="@drawable/gradient1"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/moreLL"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2"
                    android:minHeight="45dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="left">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleRoundedCorners="30dp"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            app:mrl_rippleOverlay="true"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/camera_icon"
                                android:layout_margin="4dp"/>
                        </com.balysv.materialripple.MaterialRippleLayout>
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleRoundedCorners="30dp"
                            app:mrl_rippleOverlay="true"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/location_icon"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </com.balysv.materialripple.MaterialRippleLayout>
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleRoundedCorners="30dp"
                            app:mrl_rippleOverlay="true"
                            android:minHeight="40dp"
                            android:minWidth="40dp"
                            android:id="@+id/galleryMRL"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/colorAccent"
                                android:src="@drawable/gallery_icon"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"/>
                        </com.balysv.materialripple.MaterialRippleLayout>


                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/expandMRL"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        app:mrl_rippleRoundedCorners="30dp"
                        app:mrl_rippleOverlay="true">
                        <com.github.zagum.expandicon.ExpandIconView
                            android:layout_width="40dp"
                            android:id="@+id/expandIconView"
                            android:layout_height="40dp"
                            android:layout_gravity="center"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="45dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:id="@+id/messageET"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/et_bg"
                        android:hint="Say something..."
                        />
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/micMRL"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        app:mrl_rippleRoundedCorners="30dp"
                        app:mrl_rippleOverlay="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mic_icon"
                            android:layout_gravity="center"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/sendMRL"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"

                        android:layout_marginRight="4dp"
                        app:mrl_rippleRoundedCorners="30dp"
                        app:mrl_rippleOverlay="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/send_icon"
                            android:tint="@color/colorAccent"
                            android:layout_gravity="center"/>
                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:orientation="horizontal"
        android:padding="8dp"
        android:minHeight="70dp"
        android:layout_alignParentTop="true"
        android:id="@+id/topLL">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_gravity="top"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:transitionName="usernameTransition"
                android:layout_marginRight="4dp"
                android:id="@+id/usernameTV"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:text="Shrikanth Ravi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:id="@+id/userStatusTV"
                android:transitionName="userStatusTransition"
                android:layout_marginRight="4dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:text="Online"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profilePicCV"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:transitionName="profilePicTransition"
            android:src="@drawable/man2"/>

    </LinearLayout>

</RelativeLayout>
